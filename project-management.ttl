@prefix pmv: <http://vocabs.coypu.org/pmv/> .
@prefix org: <http://www.w3.org/ns/org#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix time: <http://www.w3.org/2006/time#> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#> .
@prefix dce11: <http://purl.org/dc/elements/1.1/> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix tmo: <http://www.semanticdesktop.org/ontologies/2008/05/20/tmo/v1.1/> .
@prefix nfo: <http://www.semanticdesktop.org/ontologies/2007/03/22/nfo/v1.2/> .

pmv: a owl:Ontology;
	dce11:description "This vocabulary is modeling project management in scientific research projects at the level of the application phase and afterwards for the work with tasks."@de;
	dce11:title "Vocabulary to express project management at task level"@en;
	dce11:creator "Kurt Junghanns (InfAI)"@en;
	rdfs:label "PMV"@en.

#################################################################
#    Classes
# All instances of them should have a label and a description
#################################################################

pmv:Countable a owl:Class;
	rdfs:label "Nummerierbar"@de. # Has identifier (number or number.number or ...)

pmv:Timed a owl:Class;
	rdfs:label "Zeitlich geplant"@de. # Has start and end time

pmv:Work a owl:Class;
	rdfs:label "Arbeit"@de. # Has PersonMonths

pmv:Contribution a owl:Class;
	rdfs:label "Beitrag"@de. # A workpackage has multiple contributions from different partners

pmv:Project a owl:Class;
	rdfs:subClassOf pmv:Timed;
	rdfs:subClassOf owl:Thing;
	rdfs:subClassOf pmv:Work;
	rdfs:label "Projekt"@de.

pmv:Partner a owl:Class;
	rdfs:subClassOf owl:Thing;
	rdfs:subClassOf foaf:Organization;
	rdfs:subClassOf org:Organization;
	rdfs:label "Partner"@de.

pmv:Workpackage a owl:Class;
	rdfs:subClassOf owl:Thing;
	rdfs:subClassOf pmv:Countable;
	rdfs:subClassOf pmv:Timed;
	rdfs:subClassOf pmv:Work;
	rdfs:label "Arbeitspaket"@de.

pmv:Subworkpackage a owl:Class;
	rdfs:subClassOf pmv:Workpackage;
	rdfs:label "Unterarbeitspaket"@de.

pmv:Milestone a owl:Class;
	rdfs:subClassOf owl:Thing;
	rdfs:subClassOf pmv:Countable;
	rdfs:subClassOf pmv:Timed;
	rdfs:label "Meilenstein"@de.

pmv:Task a owl:Class;
	rdfs:subClassOf tmo:Task;
	rdfs:subClassOf pmv:Countable;
	rdfs:subClassOf pmv:Timed;
	rdfs:subClassOf pmv:Work;
	rdfs:label "Aufgabe"@de.

pmv:ProjectMonth a owl:Class;
	rdfs:comment "Provide the month of the project, where 1 is the first month of the project"@en;
	rdfs:label "Projektmonat"@de.

pmv:PersonMonth a owl:Class;
	rdfs:comment "A person month worth of work"@en;
	rdfs:label "Personenmonat"@de.

pmv:Description a owl:Class;
	rdfs:subClassOf owl:Thing;
	rdfs:comment "Provide additional information like requirements or results"@en;
	rdfs:label "Beschreibung"@de.


#################################################################
#    Object Properties
#################################################################

pmv:ofProject a owl:ObjectProperty;
	rdfs:domain pmv:Workpackage ;
	rdfs:range pmv:Project ;
	rdfs:comment "Connects workpackage to project"@en;
	rdfs:label "von Projekt"@de.

pmv:hasPartner a owl:ObjectProperty;
	rdfs:domain pmv:Project ;
	rdfs:range pmv:Partner ;
	rdfs:comment "Connects project to partners"@en;
	rdfs:label "hat Partner"@de.

pmv:start a owl:ObjectProperty;
	rdfs:domain pmv:Timed ;
	rdfs:range pmv:ProjectMonth ;
	rdfs:comment "Project month to start"@en;
	rdfs:label "Start"@de.

pmv:end a owl:ObjectProperty;
	rdfs:domain pmv:Timed ;
	rdfs:range pmv:ProjectMonth ;
	rdfs:comment "Project month to end"@en;
	rdfs:label "Ende"@de.

pmv:hasTopworkpackage  a owl:ObjectProperty;
	rdfs:domain pmv:Subworkpackage ;
	rdfs:range pmv:Workpackage ;
	rdfs:comment "Relation to upper workpackage"@en;
	rdfs:label "hat übergeordnetes Arbeitspaket"@de.

pmv:overallPersonMonths  a owl:ObjectProperty;
	rdfs:domain pmv:Work ;
	rdfs:range pmv:PersonMonth ;
	rdfs:comment "Person months planned"@en;
	rdfs:label "Summe Personenmonate"@de.

pmv:leads  a owl:ObjectProperty;
	rdfs:domain pmv:Partner ;
	rdfs:range pmv:Workpackage ;
	rdfs:comment "Lead over (sub)workpackage"@en;
	rdfs:label "führt"@de.

pmv:inCharge  a owl:ObjectProperty;
	rdfs:domain pmv:Partner ;
	rdfs:range pmv:Subworkpackage ;
	rdfs:comment "In charge of realizing the subworkpackage"@en;
	rdfs:label "zuständig"@de.

pmv:hasContributor  a owl:ObjectProperty;
	rdfs:domain pmv:Contribution ;
	rdfs:range pmv:Partner ;
	rdfs:comment "Every contribution needs a related partner"@en;
	rdfs:label "hat Mitarbeit von"@de.

pmv:hasPersonMonths  a owl:ObjectProperty;
	rdfs:domain pmv:Contribution ;
	rdfs:range pmv:PersonMonth ;
	rdfs:comment "Every contribution needs an amount of person months"@en;
	rdfs:label "hat Personenmonate"@de.

pmv:hasWork  a owl:ObjectProperty;
	rdfs:domain pmv:Contribution ;
	rdfs:range pmv:Work ; # workpackage for example
	rdfs:comment "Every contribution belongs to some work"@en;
	rdfs:label "hat Arbeit"@de.

pmv:linkedToMilestone  a owl:ObjectProperty;
	rdfs:domain pmv:Work ;
	rdfs:range pmv:Milestone ;
	rdfs:comment "Work could be realted to a milestone"@en;
	rdfs:label "verknüpft mit Meilenstein"@de.

pmv:hasCompoundMilestone  a owl:ObjectProperty;
	rdfs:domain pmv:Milestone ;
	rdfs:range pmv:Milestone ;
	rdfs:comment "A big milestone could consist of multiple smaller ones which are its compunds."@en;
	rdfs:label "hat zusammengesetzten Meilenstein"@de.

pmv:takesPlaceIn  a owl:ObjectProperty;
	rdfs:domain pmv:Work ;
	rdfs:range pmv:Work ;
	rdfs:comment "Does link work together and also builds a hierarchy"@en;
	rdfs:label "erfolgt in"@de.

pmv:descriptionFor  a owl:ObjectProperty;
	rdfs:domain pmv:Description ;
	rdfs:range pmv:Workpackage ;
	rdfs:comment ""@en;
	rdfs:label "Beschreibung für"@de.

pmv:specificFor  a owl:ObjectProperty;
	rdfs:domain pmv:Description ;
	rdfs:range pmv:Partner ;
	rdfs:comment "Different partners have different descriptions for (sub)workpackages"@en;
	rdfs:label "specifisch für"@de.

pmv:hasResource  a owl:ObjectProperty;
	rdfs:domain owl:Thing ;
	rdfs:range rdfs:Resource ;
	rdfs:comment "Link to a resource from anything. Should use NFO."@en;
	rdfs:label "hat Ressource"@de.
	



#################################################################
#    Data properties
#################################################################

pmv:hasNumber a owl:DatatypeProperty;
	rdfs:domain pmv:Countable;
	rdfs:range rdfs:Literal;
	rdfs:comment "Gives individual a distinct number or identifier";
	rdfs:label "hat Nummer"@de.

pmv:monthNumber a owl:DatatypeProperty;
	rdfs:domain pmv:ProjectMonth;
	rdfs:range xsd:integer;
	rdfs:label "Monatsnummer"@de.

pmv:workamount a owl:DatatypeProperty;
	rdfs:domain pmv:PersonMonth;
	rdfs:range xsd:double;
	rdfs:label "Arbeitsmenge"@de.

pmv:scientificWorkamount a owl:DatatypeProperty;
	rdfs:domain pmv:PersonMonth;
	rdfs:range xsd:double;
	rdfs:label "Arbeitsmenge Wissenschaftler:in"@de.

pmv:technicalWorkamount a owl:DatatypeProperty;
	rdfs:domain pmv:PersonMonth;
	rdfs:range xsd:double;
	rdfs:label "Arbeitsmenge Techniker:in"@de.

pmv:organizationalWorkamount a owl:DatatypeProperty;
	rdfs:domain pmv:PersonMonth;
	rdfs:range xsd:double;
	rdfs:label "Arbeitsmenge Organisation"@de.

pmv:isAbortCriteria a owl:DatatypeProperty;
	rdfs:domain pmv:Milestone;
	rdfs:range xsd:boolean;
	rdfs:label "ist Abbruchmeilenstein"@de.

pmv:requirement a owl:DatatypeProperty;
	rdfs:domain pmv:Description;
	rdfs:range rdfs:Literal;
	rdfs:label "Voraussetzungen"@de.

pmv:solutionProcess a owl:DatatypeProperty;
	rdfs:domain pmv:Description;
	rdfs:range rdfs:Literal;
	rdfs:label "Lösungsweg"@de.

pmv:result a owl:DatatypeProperty;
	rdfs:domain pmv:Description;
	rdfs:range rdfs:Literal;
	rdfs:label "Ergebnis"@de.

pmv:otherResources a owl:DatatypeProperty;
	rdfs:domain pmv:Description;
	rdfs:range rdfs:Literal;
	rdfs:label "sonstige Ressourcen"@de.
